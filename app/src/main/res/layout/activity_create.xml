<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ctadmin.bank.create">

    <TextView
        android:text="CREATE AN ACCOUNT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignTop="@+id/acctype"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText1"
        android:layout_alignBottom="@+id/accid"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="acc type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/acctype"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/accid"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:id="@+id/bal"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_below="@+id/editText2"
        android:layout_toStartOf="@+id/textView3"
        android:layout_alignEnd="@+id/acctype" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_alignTop="@+id/bal"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="acc id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:id="@+id/accid"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/bal" />

    <Button
        android:text="CREATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/create2"
        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
